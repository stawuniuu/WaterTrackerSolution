@inherits WaterIntakeBase

<div id="earnings-container" class="card">
    <div class="card-header">
        Add a new intake
    </div>
    <div class="card-body">
        <EditForm Model="@intakeDto" OnValidSubmit="@HandleSubmit">
            <div class="form-group">
                <label for="UserId">User ID</label>
                <InputNumber class="form-control" id="userIdInput" @bind-Value="intakeDto.UserId" />
            </div>
            <div class="form-group">
                <label for="Date">Date</label>
                <InputDate class="form-control" id="Date" @bind-Value="intakeDto.IntakeDate" />
            </div>
            <div class="form-group">
                <label for="ConsumedWater">Consumed Water (ml)</label>
                <InputNumber class="form-control" id="ConsumedWater" @bind-Value="intakeDto.ConsumedWater" />
            </div>

            <div>
                <button type="submit" id="submitUser" class="btn btn-primary">Submit</button>
            </div>
        </EditForm>

    </div>
</div>

@code {
    WaterIntakeDto intakeDto = new WaterIntakeDto { IntakeDate = DateTime.Today };

    public async Task HandleSubmit()
    {
        await AddIntake(intakeDto);
    }
}